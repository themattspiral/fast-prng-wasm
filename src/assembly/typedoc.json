{
  "$schema": "https://typedoc-plugin-markdown.org/schema.json",
  "entryPoints": [
    "index.ts"
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.*",

    // Memory management functions aren't meant for public consumption,
    // as they're only used by the JS wrapper. Assume AS consumers will
    // be doing their own array memory management.
    "common/memory.ts"
  ],

  "out": "../../docs",
  "cleanOutputDir": false,
  "disableSources": true,
  "readme": "none",
  
  "plugin": ["typedoc-plugin-markdown"],
  "entryFileName": "as-api",
  // custom router "module" is provided by the plugin
  "router": "module",
  "mergeReadme": true,
  "useCodeBlocks": true,
  "hidePageHeader": true,
  "indexFormat": "table",
  "parametersFormat": "table",
  "interfacePropertiesFormat": "table",
  "classPropertiesFormat": "table",
  "enumMembersFormat": "table",
  "propertyMembersFormat": "table",
  "typeDeclarationFormat": "table",
  "tableColumnSettings": {
    "hideSources": true,
  }
}
