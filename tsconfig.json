{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noEmitOnError": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/index.js"],
  "exclude": [
    "node_modules", 
    "**/*.spec.*", 
    "docs/**",
    "src/assembly"
  ],
}